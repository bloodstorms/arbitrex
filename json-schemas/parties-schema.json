[
  {
    "type": "group",
    "name": "accounts",
    "validation": "min:1,length",
    "repeatable": true,
    "add-label": "+ Ajouter",
    "value": [{}],
    "children": [
      {
        "component": "div",
        "class": "flex-wrapper",
        "children": [
          {
            "name": "status",
            "type": "select",
            "label": "Qualité *",
            "placeholder": "Selectionner...",
            "options": [
              "Avocat",
              "Vendeur",
              "Acheteur",
              "Garage",
              "Carrosserie",
              "Centre automobile",
              "Contrôle technique",
              "Expert automobile",
              "Particulier",
              "Constructeur",
              "Importateur",
              "Assureur",
              "Remorqueur",
              "Garantisseur",
              "Fabricant",
              "Fournisseur"
            ],
            "validation": "required"
          }
        ]
      },
      {
        "component": "div",
        "class": "flex-wrapper",
        "children": [
          {
            "name": "firstname",
            "label": "Prénom *",
            "type": "text",
            "validation": "required"
          },
          {
            "name": "lastname",
            "label": "Nom *",
            "type": "text",
            "validation": "required"
          }
        ]
      },
      {
        "component": "div",
        "class": "flex-wrapper",
        "children": [
          {
            "name": "phone",
            "type": "tel",
            "label": "Numéro de téléphone *",
            "inputmode": "numeric",
            "validation": "required|number"
          },
          {
            "name": "email",
            "type": "email",
            "label": "Adresse e-mail *",
            "validation": "required|email"
          }
        ]
      },
      {
        "component": "div",
        "class": "flex-wrapper",
        "children": [
          {
            "name": "address",
            "label": "Adresse *",
            "type": "text",
            "validation": "required"
          },
          {
            "name": "complement",
            "label": "Complément (optionnel)",
            "type": "text"
          }
        ]
      },
      {
        "component": "div",
        "class": "flex-wrapper",
        "children": [
          {
            "name": "zip",
            "type": "text",
            "label": "Code postal *",
            "inputmode": "numeric",
            "validation": "required|number"
          },
          {
            "name": "city",
            "label": "Ville *",
            "type": "text",
            "validation": "required"
          }
        ]
      },
      {
        "component": "div",
        "class": "flex-wrapper",
        "children": [
          {
            "name": "country",
            "label": "Pays *",
            "type": "text",
            "value": "France",
            "validation": "required"
          }
        ]
      }
    ]
  },
  {
    "type": "submit",
    "label": "Étape suivante"
  }
]
